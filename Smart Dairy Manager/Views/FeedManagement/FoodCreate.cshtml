@model Smart_Dairy_Manager.Data_model.FeedManagement
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@if (TempData["showmassage"] != null)
{
    <div class="alert alert-warning alert-dismissible">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
        <h5><i class="icon fas fa-exclamation-triangle"></i> Alert!</h5>
        @TempData["showmassage"]
    </div>
}

<div class="container-fluid"
     style="background-image: url('/image/4396574.jpg');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 40px;">

    <div class="row w-100">
        <div class="col-md-8 offset-md-2">
            <div class="card" style="background-color: rgba(255, 255, 255, 0.9); border-radius: 12px; box-shadow: 0 0 20px rgba(0,0,0,0.3);">
                <div class="card-body p-4">

                    <h3 class="text-center mb-4">Add New Cow Information</h3>

                    <form asp-action="FoodCreate" asp-controller="FeedManagement" method="post">

                        <!-- Food Type -->
                        <div class="form-group mb-3">
                            <label asp-for="FoodType">Food Type</label>
                            <input asp-for="FoodType" class="form-control" placeholder="Enter food type (e.g. Grass, Feed, etc.)" />
                        </div>

                        <!-- Feeding Time -->
                        <div class="form-group mb-3">
                            <label asp-for="FeedingTime">Feeding Time</label>
                            <input asp-for="FeedingTime" class="form-control" type="datetime-local" />
                        </div>

                        <!-- Quantity -->
                        <div class="form-group mb-3">
                            <label asp-for="Quantity">Quantity (kg)</label>
                            <input asp-for="Quantity" class="form-control" step="0.1" placeholder="Enter quantity" />
                        </div>

                        <!-- Food Reports -->
                        <div class="form-group mb-3">
                            <label asp-for="FoodReports">Food Report</label>
                            <textarea asp-for="FoodReports" class="form-control" rows="3" placeholder="Enter food report or notes"></textarea>
                        </div>

                        <!-- Submit -->
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary px-5">Submit</button>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>


@* বাংলা ব্যাখ্যা (View)

শুধু asp-for ব্যবহার করেছি যেন ডেটা ঠিকমতো মডেলের সাথে বেঁধে যায়।
এতে এখন যা হবে:

Quantity ভুল দিলে → ইনপুট আগের মতো থাকবে

Quantity ঠিক দিলে → ডেটা সেভ হবে এবং ফর্ম খালি হয়ে যাবে

মেসেজ (TempData["showmassage"]) উপরে সুন্দরভাবে দেখাবে *@