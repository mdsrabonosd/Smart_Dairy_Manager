@model Smart_Dairy_Manager.Data_model.FeedManagement
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .vaccine-table-container {
        max-width: 700px;
        margin: 50px auto;
        background: #f8f9fa;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.1);
        padding: 30px;
    }

        .vaccine-table-container h2 {
            text-align: center;
            margin-bottom: 25px;
            color: #343a40;
            font-weight: 600;
        }

    table {
        width: 100%;
        border-collapse: collapse;
    }

    th {
        background-color: #007bff;
        color: white;
        padding: 12px;
        text-align: left;
        width: 35%;
    }

    td {
        padding: 12px;
        background-color: #ffffff;
        border-bottom: 1px solid #dee2e6;
    }

    tr:last-child td {
        border-bottom: none;
    }
</style>

<div class="vaccine-table-container">
    <h2>Feed Management Details</h2>
    <table class="table">
        <tbody>
            <tr>
                <th>Food ID</th>
                <td>@Model.FeedMGId</td>
            </tr>
            
            <tr>
                <th>FoodType</th>
                <td>@Model.FoodType</td>
            </tr>
            <tr>
                <th>FeedingTime</th>
                <td>@Model.FeedingTime</td>
            </tr>
            <tr>
                <th>Quantity</th>
                <td>@Model.Quantity</td>
            </tr>
            <tr>
                <th>FoodReports</th>
                <td>@Model.FoodReports</td>
            </tr>
        </tbody>
    </table>
</div>
