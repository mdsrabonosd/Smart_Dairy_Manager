@using Smart_Dairy_Manager.ViewModel
@model IEnumerable<MeatProductionVM>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<table class="table" id="datatable">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Date</th>
            <th scope="col">Meat Weight (kg)</th>
            <th scope="col">Action</th>

          
        </tr>
    </thead>
    <tbody>
        @foreach(var data in Model){
            <tr>
                <td>@data.MeatProductionId </td>
                <td>@data.Date </td>
                <td> @data.CowWeight</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@data.MeatProductionId" class="btn btn-sm btn-warning me-1">
                        <i class="fas fa-edit"></i> Edit
                    </a>
                    <a asp-action="Delete" asp-route-id="@data.MeatProductionId" class="btn btn-sm btn-danger">
                        <i class="fas fa-trash-alt"></i> Delete
                    </a>
                    <a asp-action="Details" asp-route-id="@data.MeatProductionId" class="btn btn-sm btn-success">
                        <i class="fas fa-trash-alt"></i> Details
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts{
    <script>
        $(document).ready(
            function(){
        $("#datatable").DataTable({
             "responsive": true, 
             dom:'Bfrtip',

             "buttons": [ 'excel', 'pdf','print']
           }).buttons().container().appendTo('#example1_wrapper .col-md-6:eq(0)');
            }
        );
    </script>
}
