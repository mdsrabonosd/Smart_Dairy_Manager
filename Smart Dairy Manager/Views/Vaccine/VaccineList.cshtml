@model IEnumerable<Smart_Dairy_Manager.Data_model.Vaccine>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-12">
            <h2 class="mb-4 text-center">Vaccine List</h2>
            @{
                bool istrue = Model.Any();
            }


            @if (Model == null)
            {
                <div class="alert alert-info text-center">
                    No vaccine records found.
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover table-bordered">
                        <thead class="thead-dark">
                            <tr class="text-center">
                                <th scope="col">#</th>
                                <th scope="col">Vaccine Name</th>
                                <th scope="col">Price</th>
                                <th scope="col">Vaccine Age (Month)</th>
                                <th scope="col">Vaccine Age (Day)</th>
                                <th scope="col">Notes</th>
                                <th scope="col">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {


                                <tr class="text-center align-middle">
                                    <th>@item.VaccineId</th>
                                    <td>@item.VaccineName</td>
                                    <td>@item.VaccinePrice</td>
                                    <td>@item.VaccineAgeMonth</td>
                                    <td>@item.VaccineAgeDay</td>
                                    <td>@item.VaccineNotes</td>
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@item.VaccineId" class="btn btn-sm btn-warning me-1">
                                            <i class="fas fa-edit"></i> Edit
                                        </a>
                                        <a class="btn btn-sm btn-danger btn-delt" data-id="@item.VaccineId">
                                            <i class="fas fa-trash-alt"></i> Delete
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.VaccineId" class=" btn btn-sm btn-success">
                                            <i class=""></i> Details
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>
@section Scripts{
    <script>
        $(document).on('click','.btn-delt',function(){

            var Vaccine_id =$(this).data('id');
            var row =$(this).closest('tr');

           Swal.fire({
          title: "Are you sure?",
          text: "You won't be able to revert this!",
          icon: "warning",
          showCancelButton: true,
          confirmButtonColor: "#3085d6",
          cancelButtonColor: "#d33",
          confirmButtonText: "Yes, delete it!"
        }).then((result) => {
          if (result.isConfirmed) {

              $.ajax({
                   url:'/Vaccine/delete/'+ Vaccine_id,

                   type:'post',

                  success:function(){
                    row.remove();

                    Swal.fire({
                      title: "Deleted!",
                        text: "Your file has been deleted.",
                         icon: "success"
                     });
                  },
                  Error:function(){
                      console.log("error")
                  }
              });
          }

        });

        });

    </script>
}
