@model Smart_Dairy_Manager.Data_model.Vaccine
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="container">
    <div class="row">
        <div class="justify-content-center col-md-6">

            @if (TempData["ErroMsg"] != null)
            {
                <div class="alert alert-warning alert-dismissible">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                    <h5><i class="icon fas fa-exclamation-triangle"></i> Alert!</h5>
                    @TempData["ErroMsg"]
                </div>
            }



            <!-- general form elements -->
            <div class="card card-primary ">
                <div class="card-header">
                    <h3 class="card-title">Vaccine Create</h3>
                </div>
                <!-- /.card-header -->
                <!-- form start -->
                <form asp-action="VaccineCreate" asp-controller="Vaccine" type="POST">
                    <div class="card-body">
                        <div class="form-group">
                            <label for="VaccineName">Vaccine name</label>
                            <input type="text" class="form-control" id="VaccineName" value="@Model.VaccineName" name="VaccineName" placeholder="Enter Vaccine Name">
                        </div>
                        <div class="form-group">
                            <label for="VaccinePrice">Price</label>
                            <input type="text" class="form-control" id="VaccinePrice" value="@Model.VaccinePrice" name="VaccinePrice" placeholder="Price">
                        </div>
                        <div class="row">
                            <div class="form-group col-md-6">
                                <label for="VaccineAgeMonth">Vaccine Age Month</label>
                                <input type="text" class="form-control" id="VaccineAgeMonth" value="@Model.VaccineAgeMonth" name="VaccineAgeMonth" placeholder="Month">
                            </div>
                            <div class="form-group  col-md-6">
                                <label for="VaccineAgeDay">Vaccine Age Day</label>
                                <input type="text" class="form-control" id="VaccineAgeDay" value="@Model.VaccineAgeDay" name="VaccineAgeDay" placeholder="Day">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="VaccineNotes">VaccineNotes</label>
                            <input type="text" class="form-control" id="VaccineNotes" value="@Model.VaccineNotes" name="VaccineNotes" placeholder="">
                        </div>



                    </div>
                    <!-- /.card-body -->

                    <div class="card-footer">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </form>
            </div>
            <!-- /.card -->

        </div>
    </div>
</div>