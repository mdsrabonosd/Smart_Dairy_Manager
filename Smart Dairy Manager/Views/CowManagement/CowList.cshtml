
@model IEnumerable<Smart_Dairy_Manager.Data_model.Cow>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-12">
            <h2 class="mb-4 text-center">Cow List</h2>
           
            
                <div class="table-responsive">
                    <table class="table table-striped table-hover table-bordered">
                        <thead class="thead-dark">
                            <tr class="text-center">
                                <th scope="col">#</th>
                                <th scope="col">Cow Gender</th>
                                <th scope="col">Date of Birth</th>
                                <th scope="col">Purses Date (Month)</th>
                                <th scope="col">Breed</th>
                                <th scope="col">Weight</th>
                                <th scope="col">Price</th>
                            <th scope"col">Action </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {


                                <tr class="text-center align-middle">
                                    <th>@item.CowId</th>
                                    <td>@item.Gender</td>
                                    <td>@item.DateOfBirth</td>
                                    <td>@item.PurchaseDate</td>
                                    <td>@item.Breed</td>
                                    <td>@item.Weight ?? "-"</td>
                                <td>@(item.Price.HasValue ? "$" + item.Price : "-")</td>
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@item.CowId" class="btn btn-sm btn-warning me-1">
                                            <i class="fas fa-edit"></i> Edit
                                        </a>
                                    <a asp-action="Delete" asp-route-id="@item.CowId" class="btn btn-sm btn-danger">
                                            <i class="fas fa-trash-alt"></i> Delete
                                        </a>
                                    <a asp-action="Details" asp-route-id="@item.CowId" class="btn btn-sm btn-danger">
                                        <i class="fas fa-trash-alt"></i> Details
                                        </a>
                                    </td>

                                
                                </tr> 
                            }
                        </tbody>
                    </table>
                </div>
            
        </div>
    </div>
</div>
