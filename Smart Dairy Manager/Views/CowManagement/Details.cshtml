@model Smart_Dairy_Manager.Data_model.Cow
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .vaccine-table-container {
        max-width: 700px;
        margin: 50px auto;
        background: #f8f9fa;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.1);
        padding: 30px;
    }

        .vaccine-table-container h2 {
            text-align: center;
            margin-bottom: 25px;
            color: #343a40;
            font-weight: 600;
        }

    table {
        width: 100%;
        border-collapse: collapse;
    }

    th {
        background-color: #007bff;
        color: white;
        padding: 12px;
        text-align: left;
        width: 35%;
    }

    td {
        padding: 12px;
        background-color: #ffffff;
        border-bottom: 1px solid #dee2e6;
    }

    tr:last-child td {
        border-bottom: none;
    }
</style>

<div class="cow-table-container">
    <h2>Cow Details</h2>
    <table class="table">
        <tbody>
            <tr>
                <th>Cow ID</th>
                <td>@Model.CowId</td>
            </tr>
            <tr>
                <th>Gender</th>
                <td>@Model.Gender</td>
            </tr>
            <tr>
                <th>Date of Birth</th>
                <td>@Model.DateOfBirth</td>
            </tr>
            <tr>
                <th>Breed</th>
                <td>@Model.Breed</td>
            </tr>
            <tr>
                <th>Price (Tk)</th>
                <td>@Model.Price</td>
            </tr>
            <tr>
                <th>Weight (Kg)</th>
                <td>@Model.Weight</td>
            </tr>
            <tr>
                <th>Purchase Date</th>
                <td>@Model.PurchaseDate</td>
            </tr>
        </tbody>
    </table>
</div>
