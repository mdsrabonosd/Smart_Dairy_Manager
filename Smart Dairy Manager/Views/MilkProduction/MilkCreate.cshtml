    <div class="row w-100">
        <div class="col-md-6 offset-md-3">

            <div class="card" style="background-color: rgba(255, 255, 255, 0.9); border-radius: 12px; box-shadow: 0 0 20px rgba(0,0,0,0.3);">
                <div class="card-body p-4">

                    <h3 class="text-center mb-4">Add Milk Entry</h3>

                    <form asp-action="MilkCreate" asp-controller="MilkProduction" method="post">
                        
                        
                        <div class="form-group mb-3">
                            <label for="CowId">CowId</label>
                            <input asp-for="CowId" input type="text" step="0.01" class="form-control" id="CowId" name="CowId" placeholder="Enter Cow ID ">
                        </div>  
                        <div class="form-group mb-3">
                            <label for="Date">Date</label>
                            <input asp-for="Date" input type="date" step="0.01" class="form-control" id="Date" name="Date" placeholder=" " >
                        </div>
                         <div class="form-group mb-3">
                            <label for="MorningYield">MorningYield</label>
                            <input asp-for="MorningYield" input type="number" class="form-control" id="MorningYield" name="MorningYield" placeholder="Enter Morning Yield">
                        </div>


                        <div class="form-group mb-3">
                            <label for="EveningYield">Evening Yield</label>
                            <input asp-for="EveningYield" input type="text" step="0.01" class="form-control" id="EveningYield" name="EveningYield" placeholder="Enter Evening Yield" required>
                        </div>

                        <div class="form-group mb-3">
                            <label for="TotalYield">Total Yield </label>
                            <input asp-for="EveningYield" input type="text" step="0.01" class="form-control" id="TotalYield" name="TotalYield" placeholder=" Enter Total Yield" required>
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-primary px-5">Submit</button>
                        </div>

                    </form>
                </div>
            </div>

        </div>
    </div>
</div>
