@model IEnumerable<Smart_Dairy_Manager.Data_model.MilkCollection>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-12">
            <h2 class="mb-4 text-center">Food List</h2>

            <form>
                <div class="table-responsive">
                    <table class="table table-striped table-hover table-bordered">
                        <thead class="thead-dark">
                            <tr class="text-center">

                                <th scope="col">Cow ID </th>
                                <th scope="col">Date</th>
                                <th scope="col">Morning Yeald</th>
                                <th scope="col">Evening Yeald</th>
                                <th scope="col">Total Yeald</th>
                                <th scope="col">Actoin </th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="text-center align-middle">
                                    <td>@item.CowId</td>
                                    <td>@item.Date</td>
                                    <td>@item.MorningYield</td>
                                    <td>@item.EveningYield</td>
                                    <td>@item.TotalYield</td>
                                 

                                    
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@item.MilkCollectionId" class="btn btn-sm btn-warning me-1">
                                            <i class="fas fa-edit"></i> Edit
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.MilkCollectionId" class="btn btn-sm btn-danger">
                                            <i class="fas fa-trash-alt"></i> Delete
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.MilkCollectionId" class="btn btn-sm btn btn-success">
                                            <i class="fas fa-trash-alt"></i> Details
                                        </a>
                                    </td>
                                    

                                </tr>

                                
                            }
                        </tbody>
                    </table>
                </div>
            </form>

        </div>
    </div>
</div>








